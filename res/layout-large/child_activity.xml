<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan"
    android:orientation="vertical" 
 >
    
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:text="@string/BillTotalWithTip"
        android:textSize="40sp" />
    
	<EditText
	    android:id="@+id/editTextResult1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:inputType="text"
        android:focusable="false"
        android:focusableInTouchMode="false"
		android:layout_marginTop="15dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="40sp" />
    


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/Tip"
        android:textColor="@color/black"
        android:textSize="40sp" />
    
     <EditText
        android:id="@+id/editTextResult2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:inputType="text"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/numberInPartyTxt"
        android:textColor="@color/black"
        android:textSize="40sp" />
    
     <EditText
        android:id="@+id/editTextResult3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:inputType="text"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/IndividualBills"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/editTextResult4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:inputType="text"
        android:background="@color/white"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <Button
	android:id="@+id/buttonAgain"
	android:layout_width="fill_parent"
	android:background="@drawable/color_change" 
	android:layout_height="wrap_content"
	android:onClick="buttonAgain"
	android:text="@string/again"
	android:textSize="40sp"
    android:textColor="@color/black" 
	android:layout_marginTop = "55dp"/>
    
    
</LinearLayout>
    
    
    
    
    
    
    

